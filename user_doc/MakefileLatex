all: crystal_facet_uml_user_documentation.pdf crystal_facet_uml_user_documentation

crystal_facet_uml_user_documentation.pdf: doc/*.tex
	cd doc &&\
	pdflatex -file-line-error -halt-on-error crystal_facet_uml_user_documentation.tex &&\
	cd .. &&\
	mv doc/crystal_facet_uml_user_documentation.pdf .

crystal_facet_uml_user_documentation: doc/*.tex
	cd doc &&\
	latex2html -html_version 4.0,latin1,unicode -split 1 -nonavigation -noinfo -title "crystal_facet_uml user manual" crystal_facet_uml_user_documentation.tex &&\
	cd .. &&\
	rm -fr crystal_facet_uml_user_documentation &&\
	mv doc/crystal_facet_uml_user_documentation .

clean:
	rm -fr crystal_facet_uml_user_documentation &&\
	rm -f doc/*.aux doc/*.log doc/*.toc crystal_facet_uml_user_documentation.pdf
